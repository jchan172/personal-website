<% provide(:mode, 'management') %>
<% provide(:title, 'Create Blog Entry') %>

<div class="container-fluid">
  <div class="row-fluid">
    <%= render 'layouts/sidebar' %>
    <script type="text/javascript">
      $('#blogs-link').removeClass("inactive").addClass("active") // change the "inactive" class to "active"
    </script>

    <div class="span8">
      <h1>Create a New Entry in <%= Blog.find(params[:blogid]).title%> </h1>

      <%= form_for(@blogentry) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <%= f.label :title %>
        <%= f.text_field :title %>

        <div class="redactor_box">
          <%= f.text_area :content, placeholder: "Write a new blog entry...", :class => "redactor"%>
        </div>

        <% # :blogid was passed from a blogs_controller action, and now we put it %>
        <% # into params[:blog][:id] to send off with the POST request. %>
        <%= hidden_field :blog, :id, :value => params[:blogid] %>

        <br>

        <%= f.submit "Create Entry", class: "btn btn-large btn-success" %>
      <% end %>

    </div>
  </div>
</div>
