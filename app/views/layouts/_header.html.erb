<% if yield(:title) == 'Home' %> <%# fancy navbar on home page %>
  <div class="navbar transparent navbar-inverse navbar-fixed-top">
<% else %>
  <div class="navbar navbar-inverse navbar-fixed-top">
<% end %>
    <div class="navbar-inner">
    	<div class="container"> 
  			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  			</button>
        <%= link_to image_tag(asset_path('jack.gif')), root_path, 'data-no-turbolink' => true, :class => "brand" %>
  			<div class="nav-collapse collapse">
  				<ul class="nav pull-right">
  					<li>
  						<%= link_to "About", about_path %>
  					</li>
            <% if User.first %>
              <li class="dropdown">
                <%= link_to 'Projects <b class="caret"></b>'.html_safe, '#', :class => "dropdown-toggle", "data-toggle" => "dropdown"  %>
                <ul class="dropdown-menu">
                  <% User.first.projects.each do |project| %>
                    <li>
                      <%= link_to project.title, project %>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
  				</ul>
  			</div>
  		</div>
  	</div>
  </div>