<% provide :title, @blog.title %>

<div class="container-content">
	<h1><%= @blog.title %></h1>
	<%= @blog.content.html_safe %>
	<br>
  <br>
	<% @blogentries.each do |blogentry| %>
          <div class="row-fluid">
              <div class="page-list">
                <h3>
                  <%= blogentry.title %>
                </h3>

                <p>
                  <i>Posted at <%= blogentry.created_at.strftime('%Y %B %d %I:%M %P')%></i>
                  <%= blogentry.content.html_safe %>
                </p>
              </div>
              <!--/span-->
            </div>
        <% end %>
	<br>
</div>